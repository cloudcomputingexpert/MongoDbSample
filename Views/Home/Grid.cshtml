@{
    ViewBag.Title = "Home Page";
    Layout = null;
    string sBaseurl = System.Configuration.ConfigurationManager.AppSettings["BaseUrl"];
}
@model IEnumerable<MongoDbSample.Models.Student>

<div>
    <h3>This a sample MongoDB program.</h3>
</div>
<div>
    <div id="screen_section">
        <table border="1" style="width: 100%; border-spacing: inherit; text-align: center;">
            <tr>
                <td>ID</td>
                <td></td>
                <td>Name</td>
                <td>Grade</td>
                <td>Address</td>
                <td>Phone</td>
                <td>City</td>
            </tr>
            @foreach (var r in Model)
            {
                <tr>
                    <td>@r.Id</td>
                    <td><a href="@sBaseurl/Home/DeleteStudent?id=@r.Id">Delete</a></td>
                    <td>@r.Name</td>
                    <td>@r.Grade</td>
                    <td>@r.Address</td>
                    <td>@r.Phone</td>
                    <td>@r.City</td>
                </tr>

            }
        </table>
    </div>
    <br/>
    <br/>
    <a href="@sBaseurl/Home/StudentGrid">Add more students</a>
</div>



